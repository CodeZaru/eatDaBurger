<div id="holder">

    <div class="container">
        <div class="jumbotron">
            <h1 class="text-center">MmmMmmGood!</h1>
        </div>
    </div>

    <div class="container" id="add-burger">
        <div class="col-md-12">
            <h2>Whatcha in the mood for?</h2>
            <form class="create-update-form" action="/" method="POST">

            <div class="form-group">
                <label for="burger">Special Order Burger:</label>
                <input type="text" id="burger" name="burgerName">
            </div>

            <button class="btn btn-default btn-success" type="submit">Orders Away</button>
            </form>
        </div>
    </div>

    <div class="container">
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div id="orderList">
            <h2>You might enjoy one of these:</h2>
            </div>
            <ul>
            {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.burgerName}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button class="btn btn-default btn-success" type="submit">Try me, I'm Delish!</button>
                    </form>

                </li>
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div id="devouredList">
            <h2>Burgers already devoured:</h2>
            </div>
            <ul>
            {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    {{this.burgerName}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="false">
                    {{!-- <button class="btn" type="submit">Please eat me!</button> --}}
                    </form>

                </li>
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>

</div>